<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Fitting4PC - Resultados</title>
  <link rel="stylesheet" href="/styles.css">
  <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>
  <div class="container">
    <h1 class="recommendation-title">Configuração Recomendada</h1>
    <% if (components.length > 0) { %>
      <table class="result-table">
        <thead>
          <tr>
            <th>Componente</th>
            <th>Descrição</th>
            <th>Preço</th>
          </tr>
        </thead>
        <tbody>
          <% components.forEach(component => { %>
            <tr>
              <td><%= component.name %></td>
              <td><%= component.description %></td>
              <td>R$ <%= component.price.toFixed(2) %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
      <div class="summary">
        <p><strong>Valor Total:</strong> R$ <%= totalCost.toFixed(2) %></p>
        <p><strong>Orçamento Restante:</strong> R$ <%= remainingBudget.toFixed(2) %></p>
      </div>
    <% } else { %>
      <p>Não foi possível montar uma configuração com o orçamento fornecido.</p>
    <% } %>
    <div class="button-section">
      <a href="/" class="button">Voltar</a>
      <a href="https://www.userbenchmark.com" target="_blank" class="button">Ver Benchmarks</a>
    </div>
  </div>
</body>
</html>
